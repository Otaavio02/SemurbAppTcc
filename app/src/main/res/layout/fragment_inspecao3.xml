<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ViarioEditadoActivity">


        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:buttonTint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/partesemavaria"
            android:textColor="@color/AzulEstranho"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout33" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:buttonTint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/partesemavaria"
            android:textColor="@color/AzulEstranho"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout4321" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:buttonTint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/partesemavaria"
            android:textColor="@color/AzulEstranho"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout431" />

        <RelativeLayout
            android:id="@+id/relativeLayout431"
            android:layout_width="376dp"
            android:layout_height="280dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/inspecaopartes"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox9">

            <TextView
                android:id="@+id/textView4376"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/outra"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout98"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4376"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:background="@drawable/bg_partes"
                app:endIconDrawable="@drawable/cameramais"
                app:startIconScaleType="fitStart">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:hint="@string/descricao_dano"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#808080" />

                    <ImageButton
                        android:id="@+id/imageButton712"
                        android:layout_width="47dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_add" />

                    <ImageButton
                        android:id="@+id/imageButton1197"
                        android:layout_width="47dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cameramais" />

                </FrameLayout>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0" />

        <RelativeLayout
            android:id="@+id/relativeLayout4321"
            android:layout_width="376dp"
            android:layout_height="280dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/inspecaopartes"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox8">

            <TextView
                android:id="@+id/textView437632"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/lateral_esquerda"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout9812"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView437632"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:background="@drawable/bg_partes"
                app:endIconDrawable="@drawable/cameramais"
                app:startIconScaleType="fitStart">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:hint="@string/descricao_dano"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#808080" />

                    <ImageButton
                        android:id="@+id/imageButton71232"
                        android:layout_width="47dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_add" />

                    <ImageButton
                        android:id="@+id/imageButton119723"
                        android:layout_width="47dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cameramais" />

                </FrameLayout>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/xxxx_inspecao"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline84" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/registre_qual"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />

        <ImageButton
            android:id="@+id/btn_voltarInspecao4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/guideline84"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline83"
            app:srcCompat="@drawable/voltar" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.07657068" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <RelativeLayout
            android:id="@+id/relativeLayout33"
            android:layout_width="376dp"
            android:layout_height="280dp"
            android:background="@drawable/inspecaopartes"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline88">

            <TextView
                android:id="@+id/textView4332"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/lateral_direita"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout32"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4332"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:background="@drawable/bg_partes"
                app:endIconDrawable="@drawable/cameramais"
                app:startIconScaleType="fitStart">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:hint="@string/descricao_dano"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#808080" />

                    <ImageButton
                        android:id="@+id/imageButton732"
                        android:layout_width="47dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_add" />

                    <ImageButton
                        android:id="@+id/imageButton1154"
                        android:layout_width="47dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cameramais" />

                </FrameLayout>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finalizar"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_button"
            android:backgroundTintMode="add"
            android:elevation="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/finalizar"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox10" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>