<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        tools:context=".ViarioEditadoActivity">


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            android:background="?attr/CorTextoPadrao"
            app:layout_constraintTop_toBottomOf="@id/bg_tipoAlteracao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_tipoAlteracao"
            android:layout_width="370dp"
            android:layout_height="296dp"
            android:background="@drawable/bg_editados"
            android:padding="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTipoAlteracao">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="340dp"
                android:layout_height="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/inspecaonegocio" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:text="@string/ineficiente"
                android:textColor="?attr/CorTextosRadio"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/imageView22"
                app:layout_constraintStart_toStartOf="@id/imageView22"
                app:layout_constraintTop_toTopOf="@id/imageView22" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="340dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView22"
                app:srcCompat="@drawable/inspecaonegocio" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:text="@string/substitui_o"
                android:textColor="?attr/CorTextosRadio"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/imageView24"
                app:layout_constraintStart_toStartOf="@id/imageView24"
                app:layout_constraintTop_toTopOf="@id/imageView24" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="340dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView24"
                app:srcCompat="@drawable/inspecaonegocio" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:text="@string/sugest_o"
                android:textColor="?attr/CorTextosRadio"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/imageView23"
                app:layout_constraintStart_toStartOf="@id/imageView23"
                app:layout_constraintTop_toTopOf="@id/imageView23" />

            <RadioGroup
                android:id="@+id/rgViarioEditado"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView23"
                app:layout_constraintEnd_toEndOf="@+id/imageView24"
                app:layout_constraintTop_toTopOf="@+id/imageView22">

                <RadioButton
                    android:id="@+id/rbSinaInefi"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp" />

                <RadioButton
                    android:id="@+id/rbSubstituicao"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="25dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp" />

                <RadioButton
                    android:id="@+id/rbSugestao"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp" />

            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/btn_voltarViarioEditado"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/guideline52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline49"
            app:srcCompat="?attr/voltar"  />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0" />

        <TextView
            android:id="@+id/textViewViarioID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/xxxx_xxxx"
            android:textColor="?attr/CorTextosNormais"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline52" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.10" />





        <EditText
            android:id="@+id/editTextEndereco"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/endereco"
            android:layout_marginTop="50dp"
            android:inputType="text"
            android:textColorHint="@color/Branco"
            android:textColorLink="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDetalhamento" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextEndereco"
            app:layout_constraintEnd_toStartOf="@+id/editTextEndereco"
            app:layout_constraintTop_toTopOf="@+id/editTextEndereco"
            app:srcCompat="?attr/localizacaoIcon" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/endereco2"
            android:textColor="?attr/CorTextosNormais"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextEndereco"
            app:layout_constraintStart_toStartOf="@+id/editTextEndereco" />


        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="307dp"
            android:layout_height="138dp"
            android:background="@drawable/bg_caixa"
            android:scrollbarThumbVertical="@drawable/bg_scrollbar"
            android:scrollbars="vertical"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextEndereco">

            <EditText
                android:id="@+id/editTextDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="@string/escreva"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="@color/CinzaClarinho"
                android:textSize="14sp" />

        </ScrollView>

        <ImageView
            android:id="@+id/imageViewFotoBackground"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/bg_caixa"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/scrollView2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/imageViewFoto"
            android:elevation="1dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/bg_caixa"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@id/imageViewFotoBackground"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:elevation="2dp"
            android:id="@+id/textViewFoto"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Clique aqui para adicionar uma imagem."
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/imageViewFoto"
            app:layout_constraintTop_toTopOf="@id/imageViewFoto"
            app:layout_constraintRight_toRightOf="@id/imageViewFoto"
            app:layout_constraintLeft_toLeftOf="@id/imageViewFoto"
            />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView25"
            app:layout_constraintEnd_toStartOf="@+id/textView25"
            app:layout_constraintTop_toTopOf="@+id/textView25"
            app:srcCompat="?attr/simbolodescricao" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/descricao_viario"
            android:textColor="@color/Branco"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/scrollView2" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finalizarViarioEdicao"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_buttonverde"
            android:backgroundTintMode="add"
            android:elevation="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:shadowColor="@color/Preto"
            android:shadowDx="3"
            android:shadowRadius="1"
            android:text="@string/finalizar"
            android:textColor="@color/VerdeLimao"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewFotoBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline59" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_excluirViario"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_buttonvermelho"
            android:backgroundTintMode="add"
            android:elevation="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:shadowColor="@color/Preto"
            android:shadowDx="3"
            android:shadowRadius="1"
            android:text="@string/excluir"
            android:textColor="@color/VermelhoCoral"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline59"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFoto" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/textViewDetalhamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/detalhamento"
            android:textColor="?attr/CorTextosNormais"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

        <TextView
            android:id="@+id/textViewTipoAlteracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/tipo_sinalizacao"
            android:textColor="?attr/CorTextosNormais"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewViarioID" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>