<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ViarioEditadoActivity">


        <ImageButton
            android:id="@+id/btn_voltarViarioEditado"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/guideline52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline49"
            app:srcCompat="@drawable/voltar" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/xxxx_xxxx"
            android:textColor="@color/AzulEscuroProfundo"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline53"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline52" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.10" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="370dp"
            android:layout_height="296dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline54"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline53">


            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/retanguloedicao" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">


                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="340dp"
                    android:layout_height="56dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/inspecaonegocio" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="20dp"
                    android:paddingEnd="5dp"
                    android:text="@string/ineficiente"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@id/imageView22"
                    app:layout_constraintStart_toStartOf="@id/imageView22"
                    app:layout_constraintTop_toTopOf="@id/imageView22" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="44dp"
                    android:layout_height="42dp"
                    app:buttonCompat="@drawable/bg_button3"
                    app:layout_constraintBottom_toBottomOf="@id/imageView22"
                    app:layout_constraintEnd_toEndOf="@id/imageView22"
                    app:layout_constraintTop_toTopOf="@id/imageView22" />


                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="340dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView22"
                    app:srcCompat="@drawable/inspecaonegocio" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="20dp"
                    android:paddingEnd="5dp"
                    android:text="@string/substitui_o"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@id/imageView24"
                    app:layout_constraintStart_toStartOf="@id/imageView24"
                    app:layout_constraintTop_toTopOf="@id/imageView24" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="44dp"
                    android:layout_height="42dp"
                    app:buttonCompat="@drawable/bg_button3"
                    app:layout_constraintBottom_toBottomOf="@id/imageView24"
                    app:layout_constraintEnd_toEndOf="@id/imageView24"
                    app:layout_constraintTop_toTopOf="@id/imageView24" />

                <!-- BotÃ£o 3 -->
                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="340dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView24"
                    app:srcCompat="@drawable/inspecaonegocio" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingStart="20dp"
                    android:paddingEnd="5dp"
                    android:text="@string/sugest_o"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@id/imageView23"
                    app:layout_constraintStart_toStartOf="@id/imageView23"
                    app:layout_constraintTop_toTopOf="@id/imageView23" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="44dp"
                    android:layout_height="42dp"
                    app:buttonCompat="@drawable/bg_button3"
                    app:layout_constraintBottom_toBottomOf="@id/imageView23"
                    app:layout_constraintEnd_toEndOf="@id/imageView23"
                    app:layout_constraintTop_toTopOf="@id/imageView23" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5837616" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline54"
            app:srcCompat="@drawable/turno4_linha" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.326" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.63" />


        <EditText
            android:id="@+id/editTextText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/endereco"
            android:inputType="text"
            android:textColorHint="@color/Branco"
            android:textColorLink="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/guideline57"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline56" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextText"
            app:layout_constraintEnd_toStartOf="@+id/editTextText"
            app:layout_constraintTop_toTopOf="@+id/editTextText"
            app:srcCompat="@drawable/viario_endereco" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/endereco2"
            android:textColor="@color/Branco"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextText"
            app:layout_constraintStart_toStartOf="@+id/editTextText" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.71" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="307dp"
            android:layout_height="138dp"
            android:background="@drawable/bg_caixa"
            android:scrollbarThumbVertical="@drawable/bg_scrollbar"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/guideline58"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline57">

            <EditText
                android:id="@+id/scrollableTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="@string/escreva"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="@color/CinzaClarinho"
                android:textSize="14sp" />

        </ScrollView>

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView25"
            app:layout_constraintEnd_toStartOf="@+id/textView25"
            app:layout_constraintTop_toTopOf="@+id/textView25"
            app:srcCompat="@drawable/simbolo_descricao" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/descricao_viario"
            android:textColor="@color/Branco"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/scrollView2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finalizarViarioEdicao"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/bg_button"
            android:backgroundTintMode="add"
            android:elevation="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:shadowColor="@color/Preto"
            android:shadowDx="3"
            android:shadowRadius="1"
            android:text="@string/finalizar"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="@+id/guideline59"
            app:layout_constraintTop_toTopOf="@+id/scrollView2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/finalizar_edicaoviario"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/bg_buttonvermelho"
            android:backgroundTintMode="add"
            android:elevation="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:shadowColor="@color/Preto"
            android:shadowDx="3"
            android:shadowRadius="1"
            android:text="@string/excluir"
            android:textColor="@color/VermelhoCoral"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline59"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scrollView2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.49878347" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/detalhamento"
            android:textColor="@color/AzulEscuroProfundo"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline56"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline54" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/tipo_alteracao"
            android:textColor="@color/AzulEscuroProfundo"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline53" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>