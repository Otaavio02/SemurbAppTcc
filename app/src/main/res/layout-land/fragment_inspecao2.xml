<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ViarioEditadoActivity">


        <ImageButton
            android:id="@+id/btn_voltarInspecao2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/guideline77"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline76"
            app:srcCompat="?attr/voltar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProximoInspecao2"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button"
            android:backgroundTintMode="add"
            android:clickable="true"
            android:elevation="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:shadowColor="@color/Preto"
            android:shadowDx="3"
            android:shadowRadius="1"
            android:text="@string/proximo"
            android:textColor="?attr/CorTextosNormais"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView234" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline76"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.099744245" />

        <TextView
            android:id="@+id/textViewInspecaoViatura"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/xxxx_inspecao"
            android:textColor="?attr/CorTextosNormais"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline77" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/houve_avaria"
            android:textColor="?attr/CorTextosNormais"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewInspecaoViatura" />


        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="350dp"
            android:layout_height="56.39dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_radiooption" />

        <ImageView
            android:id="@+id/imageView234"
            android:layout_width="350dp"
            android:layout_height="56.39dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView24"
            app:srcCompat="@drawable/bg_radiooption" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="199dp"
            android:layout_height="21dp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:text="@string/rb_sim_avaria"
            android:textColor="?attr/CorTextosRadio"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView24"
            app:layout_constraintStart_toStartOf="@+id/imageView24"
            app:layout_constraintTop_toTopOf="@+id/imageView24" />

        <TextView
            android:id="@+id/textView233"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:text="@string/rb_nao_avaria"
            android:textColor="?attr/CorTextosRadio"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView234"
            app:layout_constraintStart_toStartOf="@+id/imageView234"
            app:layout_constraintTop_toTopOf="@+id/imageView234" />

        <RadioGroup
            android:id="@+id/rgInspecao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView234"
            app:layout_constraintEnd_toEndOf="@+id/imageView24"
            app:layout_constraintTop_toTopOf="@+id/imageView24">

            <RadioButton
                android:id="@+id/rbSimAvarias"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="20dp" />

            <RadioButton
                android:id="@+id/rbNaoAvarias"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="49dp"
                android:paddingStart="5dp"
                android:paddingEnd="20dp" />

        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>